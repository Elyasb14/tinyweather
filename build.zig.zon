        .serial = .{
            .url = "https://github.com/ZigEmbeddedGroup/serial/archive/refs/heads/master.zip",
            .hash = "122054cbec27a1894b4e8568cd743d93e92de0be7a9775b90dd60932bdaddd861a5e",
